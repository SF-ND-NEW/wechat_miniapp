.grade-page {
	padding-bottom: 80rpx;
}

.grade-hero {
	background: linear-gradient(135deg, rgba(99, 102, 241, 0.16) 0%, rgba(79, 70, 229, 0.08) 100%);
	border: 1rpx solid rgba(99, 102, 241, 0.2);
}

.grade-admin__title {
	font-size: 30rpx;
	font-weight: 600;
	color: #111827;
}

.grade-admin__form {
	margin-top: 24rpx;
	display: flex;
	gap: 20rpx;
	align-items: center;
}

.title-input {
	flex: 1;
	height: 88rpx;
	padding: 0 28rpx;
	border-radius: 24rpx;
	border: 1rpx solid rgba(148, 163, 184, 0.35);
	background: #f8fafc;
	font-size: 30rpx;
	color: #0f172a;
	transition: all 0.2s ease;
}

.title-input:focus {
	border-color: rgba(79, 70, 229, 0.55);
	background: #ffffff;
	box-shadow: 0 0 0 6rpx rgba(79, 70, 229, 0.12);
}

.title-input::placeholder {
	color: #94a3b8;
}

.grade-upload-btn {
	min-width: 168rpx;
	height: 62rpx;
	border-radius: 999rpx;
	font-size: 28rpx;
	font-weight: 600;
	background: linear-gradient(135deg, #4f46e5 0%, #6366f1 100%);
    box-shadow: 0 18rpx 32rpx rgba(99, 102, 241, 0.25);
}

.grade-admin__hint {
	display: block;
	margin-top: 18rpx;
	font-size: 24rpx;
	color: #94a3b8;
}

.grade-state {
	text-align: center;
	color: #475569;
	font-size: 28rpx;
}

.grade-files {
	display: flex;
	flex-direction: column;
	gap: 24rpx;
}