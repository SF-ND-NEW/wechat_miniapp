.requests-page {
	padding-bottom: 100rpx;
}

.requests-hero {
	display: flex;
	align-items: center;
	justify-content: space-between;
	gap: 24rpx;
	background: linear-gradient(135deg, rgba(124, 58, 237, 0.16) 0%, rgba(99, 102, 241, 0.12) 100%);
	border: 1rpx solid rgba(99, 102, 241, 0.2);
}

.requests-hero__badge {
	padding: 8rpx 24rpx;
	border-radius: 999rpx;
	background: rgba(255, 255, 255, 0.88);
	color: #4c1d95;
	font-size: 26rpx;
	font-weight: 600;
}

.requests-stats {
	display: flex;
	gap: 20rpx;
	justify-content: space-between;
}

.requests-stats__item {
	flex: 1;
	background: rgba(241, 245, 249, 0.8);
	border-radius: 24rpx;
	padding: 28rpx 20rpx;
	text-align: center;
	display: flex;
	flex-direction: column;
	gap: 12rpx;
}

.requests-stats__item.is-success {
	background: rgba(220, 252, 231, 0.85);
}

.requests-stats__item.is-danger {
	background: rgba(254, 242, 242, 0.85);
}

.requests-stats__value {
	font-size: 38rpx;
	font-weight: 700;
	color: #0f172a;
}

.requests-stats__label {
	font-size: 24rpx;
	color: #64748b;
}

.requests-list {
	display: flex;
	flex-direction: column;
	gap: 24rpx;
}

.requests-card {
	display: flex;
	flex-direction: column;
	gap: 24rpx;
}

.requests-card__head {
	display: flex;
	justify-content: space-between;
	align-items: flex-start;
	gap: 16rpx;
}

.requests-card__title {
	flex: 1;
	font-size: 34rpx;
	font-weight: 600;
	color: #111827;
	line-height: 1.4;
}

.requests-card__status {
	padding: 8rpx 22rpx;
	border-radius: 999rpx;
	font-size: 24rpx;
	font-weight: 600;
    color: #ffffff;
    line-height:19rpx;
    height: 62rpx;
}

.status-pending {
	background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
}

.status-approved {
	background: linear-gradient(135deg, #10b981 0%, #059669 100%);
}

.status-rejected {
	background: linear-gradient(135deg, #ef4444 0%, #b91c1c 100%);
}

.requests-card__body {
	display: flex;
	flex-direction: column;
	gap: 16rpx;
}

.requests-card__row {
	display: flex;
	align-items: center;
	gap: 12rpx;
}

.requests-card__icon {
	font-size: 26rpx;
}

.requests-card__text {
	font-size: 26rpx;
	color: #475569;
	line-height: 1.6;
}

.requests-card__text.is-success {
	color: #047857;
	font-weight: 600;
}

.requests-card__text.is-danger {
	color: #b91c1c;
	font-weight: 600;
}

.requests-empty {
	display: flex;
	flex-direction: column;
	align-items: center;
	text-align: center;
	gap: 20rpx;
}

.requests-empty__icon {
	width: 140rpx;
	height: 140rpx;
}

.requests-empty__title {
	font-size: 34rpx;
	font-weight: 600;
	color: #1f2937;
}

.requests-empty__desc {
	font-size: 26rpx;
	color: #64748b;
	line-height: 1.6;
}

.requests-empty__btn {
	margin-top: 12rpx;
	height: 90rpx;
	padding: 0 48rpx;
	border-radius: 999rpx;
	background: linear-gradient(135deg, #2563eb 0%, #4f46e5 100%);
	color: #ffffff;
	font-size: 28rpx;
	font-weight: 600;
	box-shadow: 0 16rpx 32rpx rgba(79, 70, 229, 0.16);
}

.requests-empty__btn::after {
	border: none;
}

.requests-tip {
	margin-top: 20rpx;
	text-align: center;
	font-size: 24rpx;
	color: #94a3b8;
}

@media (max-width: 750rpx) {
	.requests-stats {
		flex-direction: column;
	}

	.requests-card__head {
		flex-direction: column;
		align-items: flex-start;
	}

	.requests-card__status {
		align-self: flex-start;
	}
}