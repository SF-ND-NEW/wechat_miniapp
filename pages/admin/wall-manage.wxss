.admin-tab-bar {
	display: flex;
	gap: 16rpx;
	margin-bottom: 24rpx;
    flex-wrap: wrap;
}

.admin-tab {
	padding: 12rpx 32rpx;
	border-radius: 999rpx;
	font-size: 26rpx;
	color: #64748b;
	background: rgba(248, 250, 252, 0.9);
	border: 1rpx solid rgba(148, 163, 184, 0.3);
    transition: all 0.2s ease;
    line-height: 10px;
    height: 72rpx;
}

.admin-tab.is-active {
	color: #1d4ed8;
	border-color: rgba(37, 99, 235, 0.45);
	background: rgba(37, 99, 235, 0.16);
	box-shadow: 0 10rpx 24rpx rgba(37, 99, 235, 0.18);
}

.wall-manage-page {
	padding-bottom: 120rpx;
}

.wall-manage-hero {
	display: flex;
	flex-direction: column;
	gap: 12rpx;
	background: linear-gradient(135deg, rgba(37, 99, 235, 0.18) 0%, rgba(29, 78, 216, 0.12) 100%);
	border: 1rpx solid rgba(29, 78, 216, 0.2);
}

.wall-manage-stats {
	display: flex;
	gap: 20rpx;
	flex-wrap: wrap;
}

.wall-manage-stats__item {
	flex: 1;
	padding: 28rpx 20rpx;
	border-radius: 24rpx;
	text-align: center;
	display: flex;
	flex-direction: column;
	gap: 10rpx;
	background: rgba(241, 245, 249, 0.96);
}

.wall-manage-stats__item.is-warning {
	background: rgba(254, 243, 199, 0.96);
}

.wall-manage-stats__item.is-success {
	background: rgba(220, 252, 231, 0.96);
}

.wall-manage-stats__item.is-info {
	background: rgba(219, 234, 254, 0.96);
}

.wall-manage-stats__value {
	font-size: 38rpx;
	font-weight: 700;
	color: #0f172a;
}

.wall-manage-stats__label {
	font-size: 24rpx;
	color: #64748b;
}

.wall-manage-filters {
	display: flex;
	flex-direction: column;
	gap: 16rpx;
}

.wall-manage-tabs {
	display: flex;
	gap: 16rpx;
	flex-wrap: wrap;
}

.wall-manage-tab {
	padding: 12rpx 28rpx;
	border-radius: 999rpx;
	border: 1rpx solid rgba(148, 163, 184, 0.3);
	font-size: 24rpx;
	color: #64748b;
	background: rgba(248, 250, 252, 0.9);
	transition: all 0.2s ease;
}

.wall-manage-tab.is-active {
	border-color: rgba(37, 99, 235, 0.45);
	background: rgba(37, 99, 235, 0.16);
	color: #1d4ed8;
	box-shadow: 0 10rpx 24rpx rgba(37, 99, 235, 0.18);
}

.wall-manage-list {
	display: flex;
	flex-direction: column;
	gap: 24rpx;
	margin-top: 24rpx;
}

.wall-manage-card {
	display: flex;
	flex-direction: column;
	gap: 24rpx;
}

.wall-manage-card__head {
	display: flex;
	align-items: center;
	gap: 16rpx;
	flex-wrap: wrap;
}

.wall-manage-card__type {
	padding: 8rpx 22rpx;
	border-radius: 999rpx;
	font-size: 24rpx;
	font-weight: 600;
	color: #ffffff;
}

.wall-manage-card__status {
	padding: 8rpx 18rpx;
	border-radius: 999rpx;
	font-size: 22rpx;
	font-weight: 600;
}

.status-PENDING {
	background: rgba(250, 204, 21, 0.15);
	color: #a16207;
}

.status-APPROVED {
	background: rgba(16, 185, 129, 0.16);
	color: #047857;
}

.status-REJECTED {
	background: rgba(239, 68, 68, 0.16);
	color: #b91c1c;
}

.status-DELETED {
	background: rgba(148, 163, 184, 0.16);
	color: #475569;
}

.status-PLAYED {
	background: rgba(59, 130, 246, 0.16);
	color: #1d4ed8;
}

.wall-manage-card__time {
	margin-left: auto;
	font-size: 24rpx;
	color: #94a3b8;
}

.wall-manage-card__body {
	display: flex;
	flex-direction: column;
	gap: 16rpx;
}

.wall-manage-card__title {
	font-size: 32rpx;
	font-weight: 600;
	color: #0f172a;
	line-height: 1.4;
}

.wall-manage-card__content {
	font-size: 26rpx;
	color: #475569;
	line-height: 1.6;
}

.wall-manage-card__media {
	margin-top: 8rpx;
}

.wall-manage-card__meta {
	display: flex;
	justify-content: space-between;
	align-items: center;
	gap: 20rpx;
	flex-wrap: wrap;
	padding-top: 12rpx;
	border-top: 1rpx solid rgba(148, 163, 184, 0.18);
}

.wall-manage-card__author {
	font-size: 24rpx;
	color: #94a3b8;
}

.wall-manage-card__stats {
	font-size: 24rpx;
	color: #64748b;
}

.wall-manage-card__actions {
	display: flex;
	gap: 16rpx;
	flex-wrap: wrap;
}

.wall-manage-btn {
	flex: 1;
	min-width: 200rpx;
	height: 88rpx;
	border-radius: 999rpx;
	font-size: 26rpx;
	font-weight: 600;
}

.wall-manage-btn::after {
	border: none;
}

.wall-manage-btn--primary {
	background: linear-gradient(135deg, #16a34a 0%, #22c55e 100%);
	color: #ffffff;
}

.wall-manage-btn--warn {
	background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
	color: #ffffff;
}

.wall-manage-btn--danger {
	background: linear-gradient(135deg, #ef4444 0%, #b91c1c 100%);
	color: #ffffff;
}

.wall-manage-state {
	margin-top: 24rpx;
	text-align: center;
	font-size: 26rpx;
	color: #94a3b8;
}

.wall-manage-state--end {
	color: #64748b;
}

.type-general {
	background: linear-gradient(135deg, #2563eb 0%, #3b82f6 100%);
}

.type-lost_and_found {
	background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
}

.type-help {
	background: linear-gradient(135deg, #10b981 0%, #059669 100%);
}

.type-announcement {
	background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
}

@media (max-width: 750rpx) {
	.wall-manage-stats {
		flex-direction: column;
	}

	.wall-manage-card__head {
		flex-direction: column;
		align-items: flex-start;
	}

	.wall-manage-card__time {
		margin-left: 0;
	}

	.wall-manage-card__actions {
		flex-direction: column;
	}

	.wall-manage-btn {
		width: 100%;
	}
}