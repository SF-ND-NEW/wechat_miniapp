.song-page {
	padding-bottom: 100rpx;
}

.song-hero {
	display: flex;
	align-items: center;
	justify-content: space-between;
	gap: 32rpx;
	background: linear-gradient(135deg, rgba(14, 165, 233, 0.16) 0%, rgba(59, 130, 246, 0.12) 100%);
	border: 1rpx solid rgba(59, 130, 246, 0.2);
}

.song-hero__btn {
	display: inline-flex;
	align-items: center;
	gap: 12rpx;
	padding: 0 34rpx;
	height: 88rpx;
	border-radius: 999rpx;
	background: rgba(255, 255, 255, 0.85);
	color: #1d4ed8;
	font-size: 28rpx;
	font-weight: 600;
}

.song-hero__btn::after {
	border: none;
}

.song-hero__icon {
	width: 40rpx;
	height: 40rpx;
}

.song-hero_text{
    width: 160rpx;
}

.song-search {
	display: flex;
	flex-direction: column;
	gap: 20rpx;
}

.song-search__controls {
	display: flex;
	align-items: center;
	gap: 20rpx;
}

.song-search__input {
	flex: 1;
	height: 82rpx;
	border-radius: 24rpx;
	border: 1rpx solid rgba(148, 163, 184, 0.35);
	background: #f8fafc;
	padding: 0 28rpx;
	font-size: 30rpx;
	color: #0f172a;
	transition: all 0.2s ease;
}

.song-search__input:focus {
	border-color: rgba(37, 99, 235, 0.55);
	background: #ffffff;
	box-shadow: 0 0 0 6rpx rgba(37, 99, 235, 0.12);
}

.song-search__btn {
	height: 72rpx;
	min-width: 168rpx;
	border-radius: 999rpx;
	background: linear-gradient(135deg, #2563eb 0%, #3b82f6 100%);
	color: #ffffff;
	font-size: 28rpx;
	font-weight: 600;
	box-shadow: 0 16rpx 32rpx rgba(37, 99, 235, 0.18);
}

.song-search__btn::after {
	border: none;
}

.song-search__btn[disabled] {
	background: rgba(148, 163, 184, 0.6);
	box-shadow: none;
}

.song-search__hint {
	font-size: 24rpx;
	color: #94a3b8;
}

.song-results {
	display: flex;
	flex-direction: column;
	gap: 24rpx;
}

.song-card {
	display: flex;
	align-items: center;
	justify-content: space-between;
	gap: 24rpx;
}

.song-card__info {
	flex: 1;
	display: flex;
	flex-direction: column;
	gap: 10rpx;
}

.song-card__title {
	font-size: 34rpx;
	font-weight: 600;
	color: #111827;
	line-height: 1.4;
}

.song-card__artist {
	font-size: 26rpx;
	color: #64748b;
}

.song-card__action {
	padding: 0 36rpx;
	height: 70rpx;
	border-radius: 999rpx;
	background: linear-gradient(135deg, #10b981 0%, #14b8a6 100%);
	color: #ffffff;
	font-size: 28rpx;
	font-weight: 600;
	box-shadow: 0 14rpx 28rpx rgba(20, 184, 166, 0.18);
}

.song-card__action::after {
	border: none;
}

.song-card__action[loading] {
	background: rgba(148, 163, 184, 0.6);
	box-shadow: none;
}

.song-placeholder {
	display: flex;
	flex-direction: column;
	align-items: center;
	text-align: center;
	gap: 20rpx;
}

.song-placeholder__icon {
	width: 140rpx;
	height: 140rpx;
	opacity: 0.8;
}

.song-placeholder__title {
	font-size: 34rpx;
	font-weight: 600;
	color: #1f2937;
}

.song-placeholder__desc {
	font-size: 26rpx;
	color: #64748b;
	line-height: 1.6;
}

@media (max-width: 750rpx) {
	.song-hero {
		flex-direction: column;
		align-items: flex-start;
	}

	.song-hero__btn {
		width: 100%;
		justify-content: center;
	}

	.song-search__controls {
		flex-direction: column;
	}

	.song-search__btn,
	.song-search__input {
		width: 100%;
	}

	.song-card {
		flex-direction: column;
		align-items: flex-start;
	}

	.song-card__action {
		width: 100%;
		justify-content: center;
	}
}